<div class="container-fluid">
      <div class="row">
        <nav class="col-lg-3 col-md-2 d-none d-md-block bg-white sidebar">
          <div class="sidebar-sticky p-3">
            <ul class="nav flex-column">
            

              <li class="nav-item">
                  <span data-feather="requests"></span>
                  <a id="privacy-tab" class="nav-link text-dark active" data-toggle="tab" href="#privacy" role="tab" aria-controls="privacy" aria-selected="true">Privacy</a>          
              </li>

               <li class="nav-item">
                  <span data-feather="requests"></span>
                  <a id="language-tab" class="nav-link text-dark" data-toggle="tab" href="#language" role="tab" aria-controls="language" aria-selected="true">Language</a>          
              </li>

            </ul>
          </div>
        </nav>

        <main role="main" class="col-md-10 ml-sm-auto col-lg-9 pt-3 px-4 h-100">


<div class="row">
  <div class="col-9">

   <div class="tab-content bg-white p-5">
  <div class="tab-pane active" id="privacy" role="tabpanel" aria-labelledby="privacy-tab">
        <h3>Privacy</h3>
        <hr>

   <%= form_for(@setting, html: {multipart: true, method: :put, 'data-turbo' => "false"}) do |form| %>
  <% if @setting.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@setting.errors.count, "error") %> prohibited this setting from being saved:</h2>

      <ul>
        <% @setting.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Who can see my posts?", style: "display: block" %>
     <%= form.select :post_privacy, [ 'public','friends','only me' ] %>
  </div>

  <div>
   <%= form.label "Who can see my friend list?", style: "display: block" %>
   <%= form.select :friends_list_privacy, [ 'public','friends','only me' ] %>
  </div>

  <div class="mt-3">
    <%= form.submit %>
  </div>
<% end %>

  
  </div>
  <div class="tab-pane" id="language" role="tabpanel" aria-labelledby="language-tab">language</div>
</div>
  
   </div>
   </div>


 </main>

      </div>

