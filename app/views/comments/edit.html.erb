
<div class="comments-edit">
<%= link_to "Back", posts_path %>
<h2> Edit your comment on: </h2>
<div class="post">
<p class="post-header">
  <span>
    
    <%= link_to "#{@comment.post.user.first_name}", @comment.post.user.first_name, class: "user-name" %>
  </span>

  <%= link_to distance_of_time_in_words(Time.now, @comment.post.created_at)+ ' ago', @comment.post, class: 'timestamp' %>
</p>

<p class="post-content">
  <%= @comment.post.content %><br/>
  <% if @comment.post.image.present? %>
    <%= image_tag @comment.post.image.url(:medium) %>
  <% end %>
</p>

<%= form_for(@comment) do |c| %>
  
  <%= c.text_area :content, class: "comment-field", placeholder: "Write a comment...", rows: "1" %>
  <%= c.submit "Save changes" %>
  <%= c.hidden_field :post_id, value: @comment.post.id %>
<% end %>
</div>
</div>